Shape Calculation-Perimeter
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#define pi 3.14133

int main() {

   int s,l,w,r,b1,s1,b2;
    scanf("%d\n %d\n %d\n %d\n %d\n %d\n %d",&s,&l,&w,&r,&b1,&s1,&b2);
    printf("Perimeter of Square:%d\n",4*s);
    printf("Perimeter of Rectangle:%d\n",2*(l+w));
    printf("Perimeter of Circle:%.2f\n",floor((2.0*pi)*r*100)/100);
    printf("Perimeter of Triangle:%d\n",b1+s1+b2);
}
