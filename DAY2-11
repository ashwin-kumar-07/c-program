Time

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int hours,mins,secs;
    scanf("%d %d %d",&hours,&mins,&secs);
    
     mins  = mins+secs/60;
     secs =  secs%60;
    
    hours = hours + mins/60;
    mins = mins%60;
     
    
    printf("Total Number of hours is %d\n",hours);
    
    printf("Total Number of minutes is %d\n",mins);
    
    printf("Total Number of seconds is %d\n",secs);
    
     


    return 0;
}
