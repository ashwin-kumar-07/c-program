PLACING THE FLAG POST

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int x,y,l;
    scanf("%d\n%d\n%d\n",&x,&y,&l);
    printf("x-coordinate:%d\n",x);
    printf("y-coordinate:%d\n",y);
    printf("Length:%d\n",l);
    int a=x+(l/2);
    int b=y+(l/2);
    printf("Centre of the ground is at (%d,%d)",a,b);

 
}
