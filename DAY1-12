Volume of the shape

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#define pi 3.14159265359

int main()
{
    int l,b,h,r;
    scanf("%d\n%d\n%d\n%d",&l,&b,&h,&r);
    printf("Volume of Cubiod=%.2f\n",(float)l*b*h);
    printf("Volume of Cylinder=%.2f\n",floor((pi*r*r*h)*100)/100);
    printf("Volume of Cone=%.2f\n",floor(((pi*r*r*h)/3.0)*100)/100);
    printf("Volume of Shpere=%.2f\n",floor((4.0/3.0*(pi*r*r*r))*100)/100);
    

  
}
