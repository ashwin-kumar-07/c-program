Mark Calculation

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    
     int b,c,d,e,f;
     char a[50];
    scanf("%[^\n]s",a);
    scanf("%d\n",&b);
     scanf("%d\n",&c);
     scanf("%d\n",&d);
     scanf("%d\n",&e);
     scanf("%d\n",&f);

    
    int sum = b+c+d+e+f;
    float avg=sum/5.0;
    printf("Name of the Student:%s\n",a);
    printf("Total marks:%d\n",sum);
    printf("Average marks:%.1f",avg);
}
